<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gomez.alejandro.teconfortasdatos.InformacionActivity">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imgsitio"
        android:layout_height="150dp"
        android:layout_width="250dp"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imgsitio"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_nombre"
            android:text="Nombre"
            android:typeface="normal"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#333333"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Dirección:"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="#333333"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tv_direccion"
                android:typeface="normal"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Horario:"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="#333333"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:textColor="#333333"
                android:id="@+id/tv_horario" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Contacto:"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="#333333"

                android:id="@+id/textView6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:textColor="#333333"
                android:id="@+id/tv_contacto" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:text="Descripción:"
                android:typeface="normal"
                android:textStyle="bold"
                android:textColor="#333333"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:typeface="normal"
                android:textColor="#333333"
                android:id="@+id/tv_desc" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver comentarios"
            android:id="@+id/btncoment"
            android:background="#337AB7"
            android:textColor="#333333"
            android:typeface="normal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="6dp"
            android:padding="10dp"/>
        <Button
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:text="Calificar"
            android:id="@+id/btncalifica"
            android:background="#337AB7"
            android:textColor="#333333"
            android:typeface="normal"
            android:textAlignment="center"
            android:paddingRight="20dp" />

    </LinearLayout>

</RelativeLayout>
