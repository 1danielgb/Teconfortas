<?xml version="1.0" encoding="utf-8"?> <!-- Definig a container for you List Item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"> <!-- Defining where should text be placed. You set you text color here-->
    <TextView android:id="@+id/list_content"
        android:textColor="#795548"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_margin="17dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>