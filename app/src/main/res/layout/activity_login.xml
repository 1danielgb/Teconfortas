<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gomez.alejandro.teconfortasdatos.LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin"
        android:background="#337AB7"
        android:textColor="#333333"
        android:typeface="normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tiahue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Iniciar SesiÃ³n"
        android:id="@+id/textView10"
        android:typeface="normal"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo: "
            android:typeface="normal"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtuser"
            android:layout_below="@+id/textView8"
            android:layout_alignEnd="@+id/textView10"
            android:layout_toEndOf="@+id/textView9"
            android:layout_weight="1.03" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:id="@+id/textView9"
            android:typeface="normal"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="20dp"
            android:layout_alignTop="@+id/txtpass"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpass"
            android:layout_above="@+id/btnlogin"
            android:layout_alignEnd="@+id/textView10"
            android:layout_alignStart="@+id/txtuser" />
    </LinearLayout>
</RelativeLayout>
